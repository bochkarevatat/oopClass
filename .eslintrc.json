{
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "extends": ["eslint:recommended", "airbnb-base"],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "requireConfigFile": false
    },
    "rules": {
      "no-restricted-syntax": ["error", "LabeledStatement", "WithStatement"],
      "no-unused-vars": "off",
      "no-plusplus": "off",
      "no-console": "off",
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "always"
        }
      ]
    }
  }